<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PolytechnicType">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        >
        <Button
            android:id="@+id/public_poly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Public Polytechnic"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            style="@style/TextAppearance.AppCompat.Medium"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/buttons_primary"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/private_poly"
            android:layout_below="@+id/public_poly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Private Polytechnic"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            style="@style/TextAppearance.AppCompat.Medium"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/buttons_primary"
            android:layout_marginBottom="10dp"
            />
        <Button
            android:id="@+id/textile_poly"
            android:layout_below="@+id/private_poly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Textile Polytechnic"
            android:textColor="@color/colorWhite"
            android:textAllCaps="false"
            style="@style/TextAppearance.AppCompat.Medium"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/buttons_primary"
            android:layout_marginBottom="10dp"
            />

    </RelativeLayout>

</RelativeLayout>