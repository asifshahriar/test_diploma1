<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TranningActivity">
    <LinearLayout
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/brtc_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/brtc" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="BRTC"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/bmtfl_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/bmtfl_lo" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="BMTFL"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/bitac_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/bitac" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="BITAC"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/dockyard_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/dockyard" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="DOCKYARD"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/ttti_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ttt" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="TTTI"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/bkiict_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/bkiict" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="BKIICT"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/dipti_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/dipti" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="DIPTI"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:id="@+id/dusra_card"
                android:clickable="true"
                android:background="@color/background"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardElevation="6dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/dusra" />
                    <TextView
                        style="@style/style_2"
                        android:layout_marginTop="10dp"
                        android:text="DUSRA"
                        android:textSize="20sp"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>